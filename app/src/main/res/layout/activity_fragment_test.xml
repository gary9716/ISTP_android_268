<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="replace F1"
        android:id="@+id/replace_fragment_1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="replace_F2"
        android:id="@+id/replace_fragment_2"
        android:layout_toRightOf="@+id/replace_fragment_1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remove_F2"
        android:id="@+id/remove_fragment_2"
        android:layout_toRightOf="@+id/replace_fragment_2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/replace_fragment_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/fragmentContainer"></FrameLayout>
</RelativeLayout>